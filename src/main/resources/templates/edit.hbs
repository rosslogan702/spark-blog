{{#partial "content"}}
    <div class="edit-entry">
        <h2>Edit Entry</h2>
        <form action="/edit/{{entry.slug}}" method="post">
            <label for="title"> Title </label>
            <input type="text" name="title" value="{{ entry.title }}" ><br>
            <label for="entry">Entry</label>
            <textarea rows="5" name="entry" >{{ entry.body }}</textarea>
            <label for="tags"> Tags - Enter as Comma Separated Values</label>
            <input type="text" name="tags" value="{{ entry.tagList }}"> <br>
            <input type="submit" value="Save Entry" class="button">
            <a href="/" class="button button-secondary">Cancel</a>
            <input type="submit" value="Delete Entry" class="button button-secondary"
                   formaction="/delete/{{entry.slug}}" >
        </form>
    </div>
{{/partial}}

{{> base.hbs}}